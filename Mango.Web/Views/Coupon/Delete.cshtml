@model CouponDto
@{
    ViewData["Title"] = "Delete Coupon";
}
<linkrel rel="stylesheet" href="~/css/DeleteCoupon.css" />
<div class="main-container">
    <div class="container animate-fade-in">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-trash me-2 text-danger"></i>Delete Coupon</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Coupon" asp-action="Index">Coupons</a></li>
                            <li class="breadcrumb-item active">Delete</li>
                        </ol>
                    </nav>
                </div>
                <a asp-controller="Coupon" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Warning Alert -->
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
            <p>You are about to delete a coupon. This action cannot be undone. Please make sure you want to proceed.</p>
            <hr>
            <p class="mb-0">Once deleted, the coupon will be removed permanently and users will no longer be able to use it.</p>
        </div>

        <!-- Coupon Details Card -->
        <div class="feature-card p-4 mb-4">
            <h4 class="mb-4"><i class="bi bi-ticket-perforated text-warning me-2"></i>Coupon Details</h4>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Coupon Code</label>
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-tag me-2"></i>
                            <span class="fs-5">@Model.CouponCode</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Discount Amount</label>
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-currency-dollar me-2"></i>
                            <span class="fs-5 text-success">$@Model.DiscountAmount.ToString("N2")</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Minimum Amount</label>
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-cart-check me-2"></i>
                            <span class="fs-5">$@Model.MinAmount.ToString("N0")</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Coupon Value</label>
                        <div class="p-3 bg-light rounded">
                            <i class="bi bi-percent me-2"></i>
                            @{
                                var discountPercentage = Model.MinAmount > 0 ?
                                (Model.DiscountAmount / Model.MinAmount) * 100 : 0;
                            }
                            <span class="fs-5">@discountPercentage.ToString("N1")% of minimum amount</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="feature-card p-4">
            <h4 class="mb-4"><i class="bi bi-shield-exclamation text-danger me-2"></i>Confirm Deletion</h4>
            <p class="text-muted mb-4">Please confirm that you want to delete this coupon. This action is permanent and cannot be undone.</p>

            <div class="d-flex justify-content-between">
                <a asp-controller="Coupon" asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="CouponId" value="@Model.CouponId" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash me-2"></i> Delete Permanently
                    </button>
                </form>
            </div>
        </div>

        <!-- Statistics (Optional) -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="feature-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Coupons</h6>
                            <h4 class="mb-0">24</h4>
                        </div>
                        <i class="bi bi-ticket text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Active Coupons</h6>
                            <h4 class="mb-0">18</h4>
                        </div>
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Deleted This Month</h6>
                            <h4 class="mb-0">2</h4>
                        </div>
                        <i class="bi bi-trash text-danger" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>