@model CouponDto
@{
    ViewData["Title"] = "Create New Coupon";
}
<link rel="stylesheet" href="~/css/CreateCoupon.css" />
<div class="main-container">
    <div class="container animate-fade-in">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1><i class="bi bi-plus-circle me-2"></i>Create New Coupon</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Coupon" asp-action="Index">Coupons</a></li>
                            <li class="breadcrumb-item active">Create</li>
                        </ol>
                    </nav>
                </div>
                <a asp-controller="Coupon" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Notification Area -->
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <!-- Form Section -->
            <div class="col-lg-8">
                <div class="feature-card p-4">
                    <h4 class="mb-4"><i class="bi bi-ticket-perforated text-warning me-2"></i>Coupon Details</h4>

                    <form asp-action="Create" method="post" id="couponForm">
                        <div class="row">
                            <!-- Coupon Code -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="CouponCode" class="form-label">
                                    <i class="bi bi-tag me-1"></i> Coupon Code *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-ticket-perforated text-primary"></i>
                                    </span>
                                    <input asp-for="CouponCode" class="form-control"
                                           placeholder="e.g., SAVE20, SUMMER50"
                                           required>
                                </div>
                                <div class="form-text">Enter a unique coupon code (uppercase recommended)</div>
                                <span asp-validation-for="CouponCode" class="text-danger small"></span>
                            </div>

                            <!-- Discount Amount -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="DiscountAmount" class="form-label">
                                    <i class="bi bi-percent me-1"></i> Discount Amount *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">$</span>
                                    <input asp-for="DiscountAmount" type="number"
                                           class="form-control"
                                           step="0.01"
                                           min="0.01"
                                           max="10000"
                                           placeholder="0.00"
                                           required>
                                    <span class="input-group-text">USD</span>
                                </div>
                                <div class="form-text">Enter the discount amount in USD</div>
                                <span asp-validation-for="DiscountAmount" class="text-danger small"></span>
                            </div>

                            <!-- Minimum Amount -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="MinAmount" class="form-label">
                                    <i class="bi bi-cart-check me-1"></i> Minimum Purchase Amount *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">$</span>
                                    <input asp-for="MinAmount" type="number"
                                           class="form-control"
                                           min="0"
                                           placeholder="0"
                                           required>
                                    <span class="input-group-text">USD</span>
                                </div>
                                <div class="form-text">Minimum cart value to apply this coupon</div>
                                <span asp-validation-for="MinAmount" class="text-danger small"></span>
                            </div>

                            <!-- Discount Type (Optional - for future enhancement) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-gift me-1"></i> Discount Type
                                </label>
                                <select class="form-select" id="discountType" disabled>
                                    <option value="fixed" selected>Fixed Amount</option>
                                    <option value="percentage">Percentage</option>
                                </select>
                                <div class="form-text">Currently only fixed amount discount is supported</div>
                            </div>

                            <!-- Expiration Date (Optional - for future enhancement) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-calendar me-1"></i> Expiration Date (Optional)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-calendar-date"></i>
                                    </span>
                                    <input type="date" class="form-control"
                                           id="expirationDate"
                                           min="@DateTime.Now.ToString("yyyy-MM-dd")">
                                </div>
                                <div class="form-text">Leave empty for no expiration</div>
                            </div>

                            <!-- Usage Limit (Optional - for future enhancement) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="bi bi-people me-1"></i> Usage Limit (Optional)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-123"></i>
                                    </span>
                                    <input type="number" class="form-control"
                                           id="usageLimit"
                                           min="1"
                                           placeholder="Unlimited">
                                </div>
                                <div class="form-text">Maximum number of times this coupon can be used</div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label class="form-label">
                                <i class="bi bi-chat-text me-1"></i> Description (Optional)
                            </label>
                            <textarea class="form-control" rows="3"
                                      id="description"
                                      placeholder="Enter coupon description (visible to customers)"></textarea>
                            <div class="form-text">Describe the purpose or conditions of this coupon</div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                <i class="bi bi-arrow-clockwise"></i> Reset Form
                            </button>

                            <div>
                                <a asp-controller="Coupon" asp-action="Index" class="btn btn-light me-2">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Create Coupon
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview & Guidelines Section -->
            <div class="col-lg-4">
                <!-- Coupon Preview -->
                <div class="feature-card p-4 mb-4">
                    <h4 class="mb-4"><i class="bi bi-eye me-2"></i>Coupon Preview</h4>

                    <div class="coupon-preview text-center p-4"
                         style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                                border-radius: 12px; color: white;">
                        <div class="coupon-icon-large mb-3">
                            <i class="bi bi-ticket-perforated" style="font-size: 3rem;"></i>
                        </div>

                        <h4 id="previewCode" class="mb-2">YOURCODE</h4>
                        <h2 id="previewDiscount" class="mb-3">$0.00 OFF</h2>

                        <div class="coupon-details">
                            <p class="mb-1" id="previewMinAmount">Min. purchase: $0</p>
                            <small id="previewExpiry">No expiration</small>
                        </div>

                        <div class="coupon-divider my-3">
                            <div style="border-top: 2px dashed rgba(255,255,255,0.5);"></div>
                        </div>

                        <button class="btn btn-light btn-sm" disabled>
                            <i class="bi bi-scissors"></i> Copy Code
                        </button>
                    </div>

                    <div class="mt-3">
                        <small class="text-muted">This is how your coupon will appear to customers</small>
                    </div>
                </div>

                <!-- Guidelines -->
                <div class="feature-card p-4">
                    <h4 class="mb-4"><i class="bi bi-info-circle me-2"></i>Guidelines</h4>

                    <div class="guidelines-list">
                        <div class="d-flex mb-3">
                            <div class="guideline-icon me-3">
                                <i class="bi bi-1-circle text-primary"></i>
                            </div>
                            <div>
                                <h6>Coupon Code Rules</h6>
                                <p class="text-muted small mb-0">
                                    Use uppercase letters and numbers. Avoid special characters.
                                </p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <div class="guideline-icon me-3">
                                <i class="bi bi-2-circle text-primary"></i>
                            </div>
                            <div>
                                <h6>Discount Amount</h6>
                                <p class="text-muted small mb-0">
                                    Enter the exact discount amount customers will receive.
                                </p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <div class="guideline-icon me-3">
                                <i class="bi bi-3-circle text-primary"></i>
                            </div>
                            <div>
                                <h6>Minimum Amount</h6>
                                <p class="text-muted small mb-0">
                                    Set a minimum cart value to prevent abuse of small discounts.
                                </p>
                            </div>
                        </div>

                        <div class="d-flex">
                            <div class="guideline-icon me-3">
                                <i class="bi bi-4-circle text-primary"></i>
                            </div>
                            <div>
                                <h6>Best Practices</h6>
                                <p class="text-muted small mb-0">
                                    • Use clear, memorable codes<br>
                                    • Set reasonable minimum amounts<br>
                                    • Consider expiration dates<br>
                                    • Test coupons before publishing
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="feature-card p-4 mt-4">
                    <h6 class="mb-3"><i class="bi bi-graph-up me-2"></i>Recent Activity</h6>

                    <div class="stats-list">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Total Coupons:</span>
                            <span class="fw-bold">24</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Active Today:</span>
                            <span class="fw-bold">3</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Avg. Discount:</span>
                            <span class="fw-bold text-success">$15.50</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Success Rate:</span>
                            <span class="fw-bold text-primary">92%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/CreateCoupon.js"></script>