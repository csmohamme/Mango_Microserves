@model CouponsViewModel
@{
    ViewData["Title"] = "Manage Coupons";
}
<link rel="stylesheet" href="~/css/coupons.css" asp-append-version="true" />
<div class="main-container">
    <div class="container animate-fade-in">
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="bi bi-ticket-perforated text-warning me-2"></i>Coupon Management</h1>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="feature-card p-4">
                    <div class="d-flex align-items-center">
                        <div class="card-icon me-3">
                            <i class="bi bi-ticket"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Total Coupons</h5>
                            <h3 class="text-primary mb-0">@Model.TotalCount</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card p-4">
                    <div class="d-flex align-items-center">
                        <div class="card-icon me-3" style="background: linear-gradient(135deg, #2ecc71, #27ae60);">
                            <i class="bi bi-currency-dollar"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Total Discount</h5>
                            <h3 class="text-success mb-0">@Model.Coupons.Sum(c => c.DiscountAmount).ToString("C")</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-2">Quick Actions</h5>
                            <a asp-controller="Coupon" asp-action="Create" class="btn btn-primary me-2">
                                <i class="bi bi-plus-circle"></i> Add New Coupon
                            </a>
                        </div>
                        <div class="text-end">
                            <div class="input-group" style="max-width: 300px;">
                                <input type="text" class="form-control" placeholder="Search coupons..." id="searchInput">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Coupons Table -->
        <div class="feature-card p-4">
            <div class="table-responsive">
                <table class="table table-hover" id="couponsTable">
                    <thead>
                        <tr class="">
                            <th width="80">#</th>
                            <th>Coupon Code</th>
                            <th>Discount Amount</th>
                            <th>Minimum Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 0;
                        }
                        @foreach (var item in Model.Coupons)
                        {
                            var rowNumber = ((Model.CurrentPage - 1) * Model.PageSize) + (++index);
                            var isActive = item.MinAmount > 0;
                            var statusClass = isActive ? "bg-success" : "bg-warning";
                            var statusText = isActive ? "Active" : "Inactive";

                            <tr class="align-middle">
                                <td>
                                    <span class="badge bg-primary rounded-pill">@rowNumber</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="coupon-icon me-3">
                                            <i class="bi bi-ticket-perforated text-warning" style="font-size: 1.5rem;"></i>
                                        </div>
                                        <div>
                                            <strong class="d-block">@item.CouponCode</strong>
                                            <small class="text-muted">Created: @DateTime.Now.AddDays(-1).ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success bg-opacity-10 text-success ">
                                            <i class="bi bi-currency-dollar"></i>
                                            @item.DiscountAmount.ToString("N2")
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary bg-opacity-10 text-dark p-2">
                                        <i class="bi bi-cart-check"></i>
                                        @item.MinAmount.ToString("N2")
                                    </span>
                                </td>
                                <td>

                                    <span class="badge @statusClass">@statusText</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" data-coupon-code="@item.CouponCode">
                                            <i class="bi bi-clipboard-plus-fill"></i>
                                        </button>
                                        <a asp-controller="Coupon" asp-action="Edit" asp-route-id="@rowNumber" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-couponId="@item.CouponId" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Coupons.Any())
                {
                    <div class="text-center py-5">
                        <div class="empty-state">
                            <i class="bi bi-ticket-perforated text-muted" style="font-size: 4rem;"></i>
                            <h4 class="mt-3">No Coupons Found</h4>
                            <p class="text-muted">Start by creating your first coupon code</p>
                            <a asp-controller="Coupon" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create First Coupon
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Coupon pagination" class="mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted">
                            Showing @(((Model.CurrentPage - 1) * Model.PageSize) + 1) to
                            @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)
                            of @Model.TotalCount entries
                        </div>

                        <ul class="pagination mb-0">
                            <!-- Previous Page -->
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-controller="Coupon"
                                   asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            <!-- Page Numbers -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == 1 || i == Model.TotalPages ||
                                (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link"
                                           asp-controller="Coupon"
                                           asp-action="Index"
                                           asp-route-page="@i">@i</a>
                                    </li>
                                }
                                else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }

                            <!-- Next Page -->
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link"
                                   asp-controller="Coupon"
                                   asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>

                        <div class="d-flex align-items-center">
                            <span class="me-2 text-muted">Items per page:</span>
                            <select class="form-select form-select-sm" style="width: auto;"
                                    onchange="changePageSize(this.value)">
                                <option value="5" selected="@(Model.PageSize == 5)">5</option>
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="20" selected="@(Model.PageSize == 20)">20</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                            </select>
                        </div>
                    </div>
                </nav>
            }
        </div>

        <!-- Quick Stats -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="feature-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Average Discount</h6>
                            <h4 class="mb-0">@(Model.Coupons.Any() ? Model.Coupons.Average(c => c.DiscountAmount).ToString("C") : "0.00")</h4>
                        </div>
                        <i class="bi bi-graph-up text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Minimum Purchase Avg</h6>
                            <h4 class="mb-0">@(Model.Coupons.Any()?Model.Coupons.Average(c => c.MinAmount).ToString("C"): "0.00")</h4>
                        </div>
                        <i class="bi bi-cart-check text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Active Coupons</h6>
                            <h4 class="mb-0">
                                @(Model.Coupons.Any()? Model.Coupons.Count(c => c.MinAmount > 0): "0.00")
                            </h4>
                        </div>
                        <i class="bi bi-check-circle text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/coupons.js" asp-append-version="true"></script>